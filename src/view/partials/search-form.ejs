<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <form class="navbar-form navbar-right">
        <div class="form-group">
            <input
                id="search"
                type="text"
                name="search"
                placeholder="Найти книгу"
                class="form-control"
                value ="<%= (!!search ? search : '') %>"
            />
            <script>
                $("#search").bind("keypress", function (e) {
                    if (e.keyCode == 13) {
                        e.preventDefault();
                        console.log('Search triger')
                        window.location.replace('/?search=' + $(this).val())
                    }
                });
            </script>

            <div class="loader">
                <img
                    src="http://localhost:3000/static/books-page_files/loading.gif"
                />
            </div>
            <div
                id="list"
                size=""
                class="bAutoComplete mSearchAutoComplete"
            ></div>
        </div>
    </form>
</div>